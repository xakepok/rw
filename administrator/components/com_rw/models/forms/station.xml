<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_rw/models/rules">
    <fieldset name="general">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="title"
                type="text"
                label="COM_RW_FORM_TITLE"
                description="COM_RW_FORM_STATION_DESC"
                required="true"
                autocomplete="off"
        />
        <field
                name="regionID"
                type="Region"
                label="COM_RW_FORM_REGION"
                description="COM_RW_FORM_REGION_DESC"
                autocomplete="off"
                required="true"
                class="js-stools-search-string"
        />
        <field
                name="yandex"
                type="number"
                label="COM_RW_FORM_YANDEX"
                description="COM_RW_FORM_YANDEX_DESC"
                required="true"
                autocomplete="off"
        />
        <field
                name="esr"
                type="number"
                label="COM_RW_FORM_ESR"
                description="COM_RW_FORM_ESR_DESC"
                required="true"
                autocomplete="off"
        />
        <field
                name="express"
                type="number"
                label="COM_RW_FORM_EXPRESS"
                description="COM_RW_FORM_EXPRESS_DESC"
                autocomplete="off"
        />
        <field
                name="lt"
                type="text"
                label="COM_RW_FORM_LT"
                description="COM_RW_FORM_LT_DESC"
                autocomplete="off"
        />
        <field
                name="lg"
                type="text"
                label="COM_RW_FORM_LG"
                description="COM_RW_FORM_LG_DESC"
                autocomplete="off"
        />
    </fieldset>
    <fieldset name="turnstiles">
        <field
                name="tppd"
                type="radio"
                class="btn-group btn-group-yesno"
                label="COM_RW_FORM_STATION_TPPD"
                description="COM_RW_FORM_STATION_TPPD_DESC"
                default=""
                >
            <option value="">COM_RW_FORM_STATION_TPPD_UNKNOWN</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="turnstiles"
                type="Turnstiles"
                label="COM_RW_FORM_TURNSTILES"
                description="COM_RW_FORM_TURNSTILES_DESC"
                default=""
        >
                <option value="">COM_RW_FORM_TURNSTILES_NOT_SETUP</option>
        </field>
        <field
                name="detour"
                type="editor"
                filter="safehtml"
                format="raw"
                label="COM_RW_FORM_STATION_INFO"
                description="COM_RW_FORM_STATION_INFO_DESC"
        />
    </fieldset>
</form>