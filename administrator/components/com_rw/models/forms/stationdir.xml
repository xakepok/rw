<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_rw/models/rules">
    <fieldset name="general">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="station"
                type="text"
                disabled="true"
                value=""
                label="COM_RW_FORM_STATION_DESC"
        />
        <field
                name="directionID"
                type="Direction"
                label="COM_RW_FORM_DIRECTION"
                description="COM_RW_FORM_DIRECTION_DESC"
                required="true"
                default=""
                >
            <option value="">COM_RW_FILTER_SELECT_DIRECTION</option>
        </field>
        <field
                name="indexID"
                type="number"
                label="COM_RW_FORM_INDEX_ID"
                description="COM_RW_FORM_INDEX_ID_DESC"
                required="true"
                autocomplete="off"
                hint="0"
                default="0"
        />
        <field
                name="zoneID"
                type="number"
                label="COM_RW_FORM_ZONE_ID"
                description="COM_RW_FORM_ZONE_ID_DESC"
                required="true"
                autocomplete="off"
                hint="0"
                default="0"
        />
        <field
                name="level"
                type="number"
                label="COM_RW_FORM_LEVEL"
                description="COM_RW_FORM_LEVEL_DESC"
                required="true"
                autocomplete="off"
                hint="0"
                default="0"
        />
        <field
                name="new_level"
                type="radio"
                class="btn-group btn-group-yesno"
                default="0"
                label="COM_RW_FORM_NEW_LEVEL"
                description="COM_RW_FORM_NEW_LEVEL_DESC"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="distance"
                type="number"
                label="COM_RW_FORM_DISTANCE"
                description="COM_RW_FORM_DISTANCE_DESC"
                required="true"
                autocomplete="off"
                hint="0"
        />
        <field
                name="default_schedule"
                type="text"
                label="COM_RW_FORM_DEFAULT_SCHEDULE"
                description="COM_RW_FORM_DEFAULT_SCHEDULE_DESC"
                autocomplete="off"
                hint="COM_RW_FORM_DEFAULT_SCHEDULE_HINT"
        />
        <field
                name="stationID"
                type="hidden"
                value=""
        />
    </fieldset>
</form>